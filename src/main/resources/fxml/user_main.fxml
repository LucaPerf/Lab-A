<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>


<StackPane fx:id="root" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.lab.ui.UserMainPage" prefHeight="400.0" prefWidth="400.0" stylesheets="@../css/light.css">
    <AnchorPane>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <AnchorPane>
                <JFXButton fx:id="back" alignment="CENTER" styleClass="button-text-rounded"
                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <graphic>
                        <FontIcon iconColor="#9e9e9e" iconLiteral="mdral-arrow_back" iconSize="24"/>
                    </graphic>
                </JFXButton>
                <HBox fx:id="topbar" alignment="CENTER" spacing="12.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <Label fx:id="username" alignment="CENTER" contentDisplay="CENTER" text="Username"
                           textAlignment="JUSTIFY"/>
                    <JFXButton fx:id="logout" styleClass="button-contained" text="ESCI"/>
                    <JFXButton fx:id="login" styleClass="button-contained" text="ACCEDI"/>
                    <JFXButton fx:id="register" styleClass="button-text" text="REGISTRATI"/>
                </HBox>
            </AnchorPane>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="12.0"/>
                </VBox.margin>
                <TextField fx:id="searchbar" maxWidth="400.0" minHeight="32.0" minWidth="400.0" prefColumnCount="1"
                           promptText="Cerca un centro" styleClass="search-bar">
                </TextField>
                <JFXButton fx:id="searchButton" alignment="CENTER" minHeight="32.0" minWidth="40.0" prefWidth="40.0"
                           styleClass="button-search-rounded">
                    <graphic>
                        <FontIcon iconColor="#3f51b5" iconLiteral="mdrmz-search" iconSize="20" textAlignment="CENTER"/>
                    </graphic>
                </JFXButton>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Label text="Cerca per"/>
                <JFXToggleNode fx:id="nameFilter" styleClass="chip-filter" text="Nome" textAlignment="CENTER"/>
                <JFXToggleNode fx:id="comuneTypeFilter" styleClass="chip-filter" text="Comune" textAlignment="CENTER"/>
                <HBox fx:id="typeFilters" alignment="CENTER" spacing="8.0">
                    <Label text="Tipo"/>
                    <JFXToggleNode fx:id="aziendale" styleClass="chip-filter" text="Aziendale" textAlignment="CENTER"/>
                    <JFXToggleNode fx:id="ospedaliero" styleClass="chip-filter" text="Ospedaliero"
                                   textAlignment="CENTER"/>
                    <JFXToggleNode fx:id="hub" styleClass="chip-filter" text="Hub" textAlignment="CENTER"/>
                </HBox>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets left="16.0"/>
                </padding>
            </HBox>
            <JFXListView fx:id="centers" styleClass="-jfx-list-view" stylesheets="@../css/light.css"
                         VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label alignment="CENTER" text="Nessun centro trovato"/>
                </placeholder>
                <VBox.margin>
                    <Insets top="12.0"/>
                </VBox.margin>
                <padding>
                    <Insets left="4.0"/>
                </padding>
            </JFXListView>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </padding>
        </VBox>
    </AnchorPane>

    <JFXDialog fx:id="logoutWarning" overlayClose="false" >
        <JFXDialogLayout maxHeight="182" maxWidth="560" prefHeight="182" prefWidth="560">
            <body>
                <Label text="Continuando verrai disconnesso"/>
            </body>
            <actions>
                <JFXButton fx:id="exit" text="OK" maxHeight="36" prefHeight="36" styleClass="button-text"/>
                <JFXButton fx:id="cancel" text="ANNULLA" maxHeight="36" prefHeight="36" styleClass="button-text"/>
            </actions>
        </JFXDialogLayout>
    </JFXDialog>
</StackPane>
